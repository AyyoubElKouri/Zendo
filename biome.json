{
   "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
   "vcs": {
      "enabled": true,
      "clientKind": "git",
      "useIgnoreFile": true
   },
   "files": {
      "ignoreUnknown": true,
      "includes": ["**", "!node_modules", "!.next", "!dist", "!build"]
   },
   "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 3,
      "lineWidth": 100
   },
   "linter": {
      "enabled": true,
      "rules": {
         "recommended": true,
         "style": {
            "useImportType": "error",
            "useExportType": "error"
         },
         "suspicious": {
            "noUnknownAtRules": "off"
         },
         "a11y": {
            "noStaticElementInteractions": "off",
            "noAutofocus": "off"
         }
      },
      "domains": {
         "next": "recommended",
         "react": "recommended"
      }
   },
   "assist": {
      "actions": {
         "source": {
            "organizeImports": {
               "level": "on",
               "options": {
                  "groups": [
                     ":URL:",
                     ":NODE:",
                     ":BLANK_LINE:",
                     ":PACKAGE:",
                     ":PACKAGE_WITH_PROTOCOL:",
                     ":BLANK_LINE:",
                     ":ALIAS:",
                     ":BLANK_LINE:",
                     ":PATH:"
                  ],
                  "identifierOrder": "natural"
               }
            }
         }
      }
   },

   "javascript": {
      "formatter": {
         "jsxQuoteStyle": "single",
         "quoteStyle": "single",
         "semicolons": "always"
      }
   }
}
