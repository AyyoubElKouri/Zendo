{
	"$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": ["src/**"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100
	},
	"linter": {
		"enabled": true,
		"includes": ["src/**"],
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off"
			},
			"suspicious": {
				"noUnknownAtRules": "off",
				"noExplicitAny": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [
							["react", "react-dom", "react/**", "react-dom/**"],
							["react-router-dom/**"],
							["lucide-react"],
							["@headlessui", "@headlessui/**"],
							["clsx", "zod"],
							":BLANK_LINE:",
							["@shared/**"],
							":BLANK_LINE:",
							["@features-*/**"]
						]
					}
				}
			}
		}
	}
}
